<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

   <data>

   </data>

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingStart="16dp"
       android:paddingEnd="16dp">

      <TextView
          style="@style/TextViewStyle.Title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/title_shop_categories"
          android:textSize="20sp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <ImageButton
          android:id="@+id/imgBtnNavDrawer"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@android:color/transparent"
          android:contentDescription="@null"
          android:src="@drawable/ic_btn_nav_drawer"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <ImageButton
          android:id="@+id/imgBtnProfilePic"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@android:color/transparent"
          android:contentDescription="@null"
          android:src="@drawable/ic_user_photo"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:orientation="horizontal"
          app:layout_constraintEnd_toEndOf="@id/imgBtnProfilePic"
          app:layout_constraintTop_toBottomOf="@id/imgBtnProfilePic">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/location"
             android:textSize="10sp"
             tools:ignore="SmallSp" />

         <ImageView
             android:contentDescription="@null"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_vertical"
             android:layout_marginStart="4dp"
             android:background="@drawable/ic_dropdown_shevron" />
      </LinearLayout>
   </androidx.constraintlayout.widget.ConstraintLayout>
</layout>