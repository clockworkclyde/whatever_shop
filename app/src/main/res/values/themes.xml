<resources xmlns:tools="http://schemas.android.com/tools">
   <!-- Base application theme. -->
   <style name="Theme.Eshop" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
      <!-- Primary brand color. -->
      <item name="colorPrimary">@color/purple_500</item>
      <item name="colorPrimaryVariant">@color/purple_700</item>
      <item name="colorOnPrimary">@color/white</item>
      <!-- Secondary brand color. -->
      <item name="colorSecondary">@color/teal_200</item>
      <item name="colorSecondaryVariant">@color/teal_700</item>
      <item name="colorOnSecondary">@color/black</item>
      <!-- Status bar color. -->
      <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
      <!-- Customize your theme here. -->
   </style>


   <style name="TextViewStyle" parent="Widget.MaterialComponents.TextView">
      <item name="fontFamily">@font/mon_regular</item>
   </style>

   <style name="TextViewStyle.Title">
      <item name="android:textSize">26sp</item>
      <item name="android:textColor">@color/base_black</item>
      <item name="fontFamily">@font/mon_medium</item>
   </style>

   <style name="TextViewStyle.ButtonText">
      <item name="android:textSize">14sp</item>
      <item name="android:textColor">@color/base_light_gray</item>
   </style>

   <style name="TextViewStyle.TextInput" parent="TextViewStyle.TextInput.Small" />

   <style name="TextViewStyle.TextInput.Small">
      <item name="android:textColor">@color/base_dark_gray</item>
      <item name="android:textSize">11sp</item>
   </style>

   <style name="PrimaryRoundedButton" parent="TextAppearance.MaterialComponents.Button">
      <item name="android:textAppearance">@style/TextViewStyle.ButtonText</item>
      <item name="cornerRadius">@dimen/bg_button_radius</item>
      <item name="android:textAllCaps">false</item>
      <item name="backgroundTint">@color/primary_button_states</item>
   </style>

   <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
      <item name="hintEnabled">false</item>
      <item name="backgroundTint">@color/bg_text_input</item>
      <item name="boxCornerRadiusBottomEnd">@dimen/bg_radius_text_input</item>
      <item name="boxCornerRadiusBottomStart">@dimen/bg_radius_text_input</item>
      <item name="boxCornerRadiusTopEnd">@dimen/bg_radius_text_input</item>
      <item name="boxCornerRadiusTopStart">@dimen/bg_radius_text_input</item>
   </style>

   <style name="TextInputStyle" parent="Widget.AppCompat.EditText">
      <item name="android:textAppearance">@style/TextViewStyle.TextInput.Small</item>
   </style>

</resources>